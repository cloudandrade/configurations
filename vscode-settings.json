//preferencias de usuário - Jan Cloude Andrade
{
	//Fonte, Tamanho da Fonte e Espaço entre as Linhas
	"editor.fontFamily": "Fira Code",
	"editor.fontSize": 12,
	"editor.lineHeight": 20,
	//Ativa junções de código como por ex: => vira uma seta.. etc..
	"editor.fontLigatures": true,
	//Fechamento de aspas simples / duplas
	"editor.autoClosingQuotes": "always",
	// Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
	"editor.rulers": [80],
	//Quebra de linha
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 70,
	"editor.formatOnSave": true,
	"eslint.packageManager": "yarn",
	"editor.codeActionsOnSaveTimeout": 650,
	"eslint.validate": [
		{
			"language": "javascript",
			"autoFix": true
		},
		{
			"language": "javascriptreact",
			"autoFix": true
		},
		{
			"language": "typescript",
			"autoFix": true
		},
		{
			"language": "typescriptreact",
			"autoFix": true
		}
	],
	"files.associations": {
		".sequelizerc": "javascript"
	},
	// Aplica um sinal visual na esquerda da linha selecionada
	"editor.renderLineHighlight": "gutter",
	// Aumenta a fonte do terminal
	"terminal.integrated.fontSize": 12,
	// Define o tema dos ícones na sidebar
	"workbench.iconTheme": "material-icon-theme",
	"workbench.startupEditor": "newUntitledFile",
	"editor.tabSize": 2,
	"window.zoomLevel": 0,
	"extensions.ignoreRecommendations": true,
	"emmet.syntaxProfiles": {
		"javascript": "jsx"
	},
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"javascript.updateImportsOnFileMove.enabled": "never",
	"gitlens.codeLens.recentChange.enabled": false,
	"gitlens.codeLens.authors.enabled": false,
	"gitlens.codeLens.enabled": false,
	"breadcrumbs.enabled": true,
	"git.enableSmartCommit": true,
	"editor.parameterHints.enabled": false,
	"typescript.updateImportsOnFileMove.enabled": "never",
	"terminal.integrated.shell.osx": "/bin/zsh",
	"explorer.confirmDragAndDrop": false,
	"liveshare.featureSet": "insiders",
	"explorer.confirmDelete": false,
	"typescript.tsserver.log": "verbose",
	"javascript.suggest.autoImports": false,
	"typescript.suggest.autoImports": false,
	"workbench.activityBar.visible": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.endOfLine": "lf",
	"prettier.quoteProps": "as-needed",
	"prettier.trailingComma": "es5",
	"prettier.tabWidth": 4,
	"files.autoSave": "off",
	"prettier.printWidth": 70,
	"workbench.colorTheme": "Atom One Dark",
	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe"
}
